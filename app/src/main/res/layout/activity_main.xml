<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:textSize="16dp"
        android:onClick="clickOperator"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <Button
        android:id="@+id/bPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="16dp"
        android:onClick="clickOperator"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toTopOf="@id/bC"
        app:layout_constraintEnd_toEndOf="parent" />
    <Button
        android:id="@+id/bsub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="16dp"
        android:onClick="clickOperator"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toTopOf="@id/bPlus"
        app:layout_constraintEnd_toEndOf="parent" />
    <Button
        android:id="@+id/bmult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="16dp"
        android:onClick="clickOperator"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toTopOf="@id/bsub"
        app:layout_constraintEnd_toEndOf="parent" />
    <Button
        android:id="@+id/bdiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="16dp"
        android:onClick="clickOperator"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toTopOf="@id/bmult"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/bequals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@id/bPlus"
        app:layout_constraintBottom_toTopOf="@id/bC" />
    <Button
        android:id="@+id/b7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="16dp"
        android:onClick="clicknumber"
        app:layout_constraintEnd_toStartOf="@id/bsub"
        app:layout_constraintBottom_toTopOf="@id/bequals" />
    <Button
        android:id="@+id/b8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="16dp"
        android:onClick="clicknumber"
        app:layout_constraintEnd_toStartOf="@id/bmult"
        app:layout_constraintBottom_toTopOf="@id/b7" />

    <Button
        android:id="@+id/b9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="16dp"
        android:onClick="clicknumber"
        app:layout_constraintEnd_toStartOf="@id/bdiv"
        app:layout_constraintBottom_toTopOf="@id/b8" />

    <Button
        android:id="@+id/b10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="16dp"
        android:onClick="clicknumber"
        app:layout_constraintEnd_toStartOf="@id/bequals"
        app:layout_constraintBottom_toTopOf="@id/bC" />
    <Button
        android:id="@+id/b11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="16dp"
        android:onClick="clicknumber"
        app:layout_constraintEnd_toStartOf="@id/b7"
        app:layout_constraintBottom_toTopOf="@id/bPlus" />
    <Button
        android:id="@+id/b12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="16dp"
        android:onClick="clicknumber"
        app:layout_constraintEnd_toStartOf="@id/b8"
        app:layout_constraintBottom_toTopOf="@id/bsub" />
    <Button
        android:id="@+id/b13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="16dp"
        android:onClick="clicknumber"
        app:layout_constraintEnd_toStartOf="@id/b9"
        app:layout_constraintBottom_toTopOf="@id/bmult" />

    <Button
        android:id="@+id/b14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="16dp"
        android:onClick="clicknumber"
        app:layout_constraintEnd_toStartOf="@id/b10"
        app:layout_constraintBottom_toTopOf="@id/bC" />
    <Button
        android:id="@+id/b15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="16dp"
        android:onClick="clicknumber"
        app:layout_constraintEnd_toStartOf="@id/b11"
        app:layout_constraintBottom_toTopOf="@id/bPlus" />

    <Button
        android:id="@+id/b16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="16dp"
        android:onClick="clicknumber"
        app:layout_constraintEnd_toStartOf="@id/b12"
        app:layout_constraintBottom_toTopOf="@id/bsub" />
    <Button
        android:id="@+id/b17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="16dp"
        android:onClick="clicknumber"
        app:layout_constraintEnd_toStartOf="@id/b13"
        app:layout_constraintBottom_toTopOf="@id/bmult" />

    <EditText
        android:id="@+id/ed1"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="Calculation process"
        android:paddingStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/t1"/>

    <EditText
        android:id="@+id/ed2"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:hint="Result"
        android:paddingStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/ed1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="70dp"
        android:text="Simple Calculator "
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@id/ed1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>